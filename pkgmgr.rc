root=/
pkgext=pkg.tar.xz

arc=/pkg/arc
inf=/pkg/inf
log=/pkg/log
lst=/pkg/lst
rcs=/pkg/rcs
sys=/pkg/sys
pkg=$HOME/build/pkg
src=$HOME/build/src

